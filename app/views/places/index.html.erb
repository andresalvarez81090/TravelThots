<% @places.each do |place| %>

	<div class = "places col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3"> 
		<% if place.user.present? %>
			<small><%= place.user.username %></small>
		<% end %>
		<% if place.state.present? %>
			<h1><%= link_to place.city, place_path(place) %>, <%= place.state %>, <%= place.country %></h1>
		<% else %>
			<h1><%= link_to place.city, place_path(place) %>, <%= place.country %></h1>
		<% end %>
		
	   <% if place.latitude.present? && place.longitude.present? %>
		    <script>

		function initMap() {
		  var myLatLng = {lat: <%= place.latitude %>, lng: <%= place.longitude %>};

		  var map = new google.maps.Map(document.getElementById('map'), {
		    zoom: 4,
		    center: myLatLng
		  });

		  var marker = new google.maps.Marker({
		    position: myLatLng,
		    map: map,
		    title: 'Hello World!'
		  });
		}

		    </script>
		    <script async defer
		        src="https://maps.googleapis.com/maps/api/js?signed_in=true&callback=initMap"></script>
		      <div id = "map"></div>   
	    <% end %>
	     
		<h2>Rating: <%= place.rating %></h2>
		<p>TravelThots: <%= place.tips %></p>

	</div>

<% end %>

<div class = "clear"></div>
<%= will_paginate @places %>

